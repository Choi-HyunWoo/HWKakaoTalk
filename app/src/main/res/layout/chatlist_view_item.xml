<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="@drawable/list_view_selector" >

    <ImageView
        android:id="@+id/img_chatroom"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"

        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/tab_friend_icon_n"/>

    <TextView
        android:id="@+id/text_othersname"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:textSize="15sp"
        android:textColor="#000000"
        android:text="최현우"
        android:gravity="center_vertical"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/img_chatroom"
        android:layout_toEndOf="@+id/img_chatroom" />

    <TextView
        android:id="@+id/text_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        android:textColor="#AAAAAA"
        android:text="오후 6:30"
        android:layout_gravity="right"
        android:layout_marginRight="10dp"
        android:layout_above="@+id/text_chat"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/text_chat"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:textSize="10sp"
        android:textColor="#AAAAAA"
        android:text="채팅내용 테스트"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/img_chatroom"
        android:layout_toEndOf="@+id/img_chatroom" />

</RelativeLayout>
