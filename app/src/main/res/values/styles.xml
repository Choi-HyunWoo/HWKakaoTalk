<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="KakaoTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/kakaoPrimary</item>
        <item name="colorPrimaryDark">@color/kakaoPrimaryDark</item>
        <item name="colorAccent">@color/kakaoAccent</item>
        <item name="android:windowContentOverlay">@null</item>

        <!-- Action bar styles -->
        <item name = "actionBarSize">50dp</item>
    </style>


    <style name="FriendInfoNoActionBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:textColor">#AAAAAA</item>
    </style>

    <style name="ChatroomNoActionBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:textColor">#000000</item>
    </style>
</resources>
